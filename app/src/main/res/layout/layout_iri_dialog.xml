<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/dripSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/sh2"
        android:fontFamily="@font/lato"
        android:hint="Drip System"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_200" />

    <EditText
        android:id="@+id/overheadSprinkler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dripSystem"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/sh2"
        android:fontFamily="@font/lato"
        android:hint="Overhead Sprinkler"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_200" />

    <EditText
        android:id="@+id/naturalRain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overheadSprinkler"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/sh2"
        android:fontFamily="@font/lato"
        android:hint="Natural Rains"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_200" />


</RelativeLayout>